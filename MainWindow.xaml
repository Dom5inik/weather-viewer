<Window x:Class="WeatherViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:WeatherViewer"
        xmlns:vm="clr-namespace:WeatherViewer.ViewModels"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="WeatherViewer" Height="450" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResize" Topmost="{Binding IsAlwaysOnTop}">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="35" ResizeBorderThickness="7" GlassFrameThickness="0" CornerRadius="0"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#55FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#44FFFFFF"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="15" CenterY="15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:MultiplyConverter x:Key="MultiplyConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="15" Background="#AA222222" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header / Weather Info -->
                <RowDefinition Height="*"/>    <!-- Radar / Content -->
                <RowDefinition Height="Auto"/> <!-- Slider / Controls -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,5,0,10">
                <!-- Top Row: Location, Settings, Close -->
                <Grid VerticalAlignment="Top">
                    <Button Content="{Binding LocationLabel}" Command="{Binding ToggleSearchCommand}" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource RoundedButtonStyle}" FontSize="10" Padding="8,4"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding ToggleSettingsCommand}" 
                                Width="28" Height="28" Margin="0,0,5,0"
                                Background="Transparent" BorderThickness="0" Foreground="White" FontSize="16" Cursor="Hand"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="Transparent" CornerRadius="14">
                                        <TextBlock Text="⚙" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#33FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Command="{Binding CloseAppCommand}" 
                                Width="28" Height="28" 
                                Background="Transparent" BorderThickness="0" Foreground="Red" FontSize="14" Cursor="Hand"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="Transparent" CornerRadius="14">
                                        <TextBlock Text="✕" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#33FF0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Search Overlay -->
                <Border Background="#EE222222" CornerRadius="8" Padding="10" BorderBrush="#44FFFFFF" BorderThickness="1"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,35,0,0" Panel.ZIndex="100"
                        Visibility="{Binding IsSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Width="200">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0" VerticalContentAlignment="Center" Padding="4" Background="#333" Foreground="White" BorderBrush="#555"/>
                            <Button Grid.Column="1" Content="{Binding SearchButtonText}" Command="{Binding SearchLocationCommand}" Style="{StaticResource RoundedButtonStyle}" Padding="10,2"/>
                        </Grid>
                        
                        <ListBox ItemsSource="{Binding LocationSuggestions}" 
                                 Background="Transparent" BorderThickness="0" 
                                 MaxHeight="200" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="5" Width="160">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                            <TextBlock Text="{Binding Country}" Foreground="#AAA" FontSize="9"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Weather Info (Dual Column) -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,35,0,0">
                    <TextBlock Text="{Binding DisplayLocationName}" FontSize="{Binding BaseFontSize, ConverterParameter=1.2, Converter={StaticResource MultiplyConverter}}" FontWeight="SemiBold" Foreground="#DDDDDD" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentSystemTime}" FontSize="{Binding BaseFontSize}" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Current Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="{Binding CurrentWeatherHeader}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentTemperature}" FontSize="{Binding BaseFontSize, ConverterParameter=2.3, Converter={StaticResource MultiplyConverter}}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentWeatherDescription}" FontSize="{Binding BaseFontSize}" Foreground="#CCCCCC" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                            
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding RainChanceLabel}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888"/>
                                    <TextBlock Text="{Binding CurrentPrecipitationChance}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888" Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding CloudCoverLabel}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888"/>
                                    <TextBlock Text="{Binding CurrentCloudCover}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Separator -->
                        <Border Grid.Column="1" Background="#33FFFFFF" Width="1" VerticalAlignment="Stretch" Margin="5,10"/>

                        <!-- Forecast Column -->
                        <StackPanel Grid.Column="2" Margin="5,0,0,0">
                            <TextBlock Text="{Binding ForecastWeatherHeader}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding ForecastTemperature}" FontSize="{Binding BaseFontSize, ConverterParameter=2.3, Converter={StaticResource MultiplyConverter}}" FontWeight="Bold" Foreground="#44BBFF" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ForecastWeatherDescription}" FontSize="{Binding BaseFontSize}" Foreground="#CCCCCC" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                            
                            <StackPanel Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding RainChanceLabel}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888"/>
                                    <TextBlock Text="{Binding ForecastPrecipitationChance}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888" Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding CloudCoverLabel}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888"/>
                                    <TextBlock Text="{Binding ForecastCloudCover}" FontSize="{Binding BaseFontSize, ConverterParameter=0.8, Converter={StaticResource MultiplyConverter}}" Foreground="#888" Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding SelectedTime}" FontSize="{Binding BaseFontSize, ConverterParameter=0.9, Converter={StaticResource MultiplyConverter}}" FontWeight="Bold" Foreground="#44BBFF"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Radar / Map Popup Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="2" Margin="5" Panel.ZIndex="50"
                  Visibility="{Binding IsRadarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" ClipToBounds="True" Background="#E6222222" 
                            BorderBrush="#44FFFFFF" BorderThickness="1,1,1,0">
                        <wv2:WebView2 Name="RadarWebView"/>
                    </Border>
                    
                    <Border Grid.Row="1" CornerRadius="0,0,12,12" Background="#E6222222" 
                            BorderBrush="#44FFFFFF" BorderThickness="1,0,1,1" Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="{Binding RadarTimeLabel}" Foreground="White" FontSize="11" 
                                       Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <Slider Minimum="-120" Maximum="0" Value="{Binding RadarTimeOffset}" 
                                    IsSnapToTickEnabled="True" TickFrequency="10"
                                    AutoToolTipPlacement="TopLeft" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Controls -->
            <StackPanel Grid.Row="2">
                <Button Content="{Binding RadarButtonText}" 
                        Command="{Binding ToggleRadarCommand}" 
                        Style="{StaticResource RoundedButtonStyle}" Margin="0,0,0,10"/>
                
                <Slider Minimum="0" Maximum="23" Value="{Binding SliderValue}" 
                        IsSnapToTickEnabled="True" TickFrequency="1"
                        AutoToolTipPlacement="TopLeft" Foreground="White"/>
            </StackPanel>

            <!-- Settings Overlay -->
            <Grid Grid.RowSpan="3" Panel.ZIndex="200" 
                  Visibility="{Binding IsSettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="#33000000" MouseLeftButtonDown="ToggleSettings_Click"/>
                <Border Background="#E6000000" CornerRadius="12" Width="260" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20"
                        BorderBrush="#44FFFFFF" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding SettingsHeader}" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="{Binding LanguageLabel}" Foreground="#AAA" Margin="0,0,0,5"/>
                        <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                            <Button Content="AUTO" Command="{Binding SetLanguageCommand}" CommandParameter="AUTO" Margin="5,0" Padding="8,4" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="PL" Command="{Binding SetLanguageCommand}" CommandParameter="PL" Margin="5,0" Padding="8,4" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="EN" Command="{Binding SetLanguageCommand}" CommandParameter="EN" Margin="5,0" Padding="8,4" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="DE" Command="{Binding SetLanguageCommand}" CommandParameter="DE" Margin="5,0" Padding="8,4" Style="{StaticResource RoundedButtonStyle}"/>
                        </WrapPanel>

                        <TextBlock Text="{Binding FontSizeLabel}" Foreground="#AAA" Margin="0,0,0,5"/>
                        <Slider Minimum="8" Maximum="20" Value="{Binding BaseFontSize}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding BaseFontSize, StringFormat='{}{0:0} px'}" Foreground="#888" HorizontalAlignment="Right" Margin="0,0,0,15"/>

                        <Button Command="{Binding ToggleAlwaysOnTopCommand}" 
                                Style="{StaticResource RoundedButtonStyle}" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding AlwaysOnTopLabel}"/>
                                <TextBlock Text=" ✓" Visibility="{Binding IsAlwaysOnTop, Converter={StaticResource BooleanToVisibilityConverter}}" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>

                        <Button Content="{Binding SettingsCloseLabel}" Command="{Binding ToggleSettingsCommand}" 
                                Margin="0,15,0,0" Padding="15,8" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
